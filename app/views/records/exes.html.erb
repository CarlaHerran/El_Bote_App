<p>Bienvenido a vista de gastos</p>

<div class="block">
    <%= link_to "Nuevo Gasto", new_record_path, class: "btn btn-default" %>
</div>

<% if @exes %>
	<h1>Listing Expenses</h1>
	<table>
	 <tr>
	   <th>Product</th>
	   <th>Mes</th>
	   <th>Account</th>
	   <th colspan="3"></th>
	 </tr>

	 <% @exes.each do |exe| %>
	   <tr>
	     <td><%= @products.find(exe.product_id).name %></td>
	     <td><%= exe.mes %></td>
	     <td><%= exe.account %></td>
	     <td><%= link_to 'Edit', edit_record_path(exe) %></td>


	     <td><%= link_to 'Destroy' %></td>
	   </tr>
	 <% end %>
	</table>
<% end %>