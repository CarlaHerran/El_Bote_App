<p>Bienvenido a vista de gastos</p>

<div class="block">
    <%= link_to "Nuevo Gasto", new_record_path, class: "btn btn-default" %>
</div>

<% if @exes %>
	<h1>Listing Expenses</h1>
	<div class="row">
	<table>

	 <tr class="something">
	   <th class="col-md-4">PRODUCT</th>
	   <th class="col-md-4">MES</th>
	   <th class="col-md-4">ACCOUNT</th>
	   <th colspan="3"></th>
	 </tr>

	 <% @exes.each do |exe| %>
	   <tr>
	     <td><%= @products.find(exe.product_id).name %></td>
	     <td><%= exe.mes %></td>
	     <td><%= exe.account %></td>
	     <td><button type="button" class="btn btn-primary" ><%= link_to 'Edit', edit_record_path(exe) %></button></td>
	     <td><button type="button" class="btn btn-danger" ><%= link_to 'Destroy', destroy_record_path(exe), method: :delete,
                                  data: { confirm: "You sure?" } %></button></td>
	   </tr>
	 <% end %>
	</table>
	</div>
<% end %>

